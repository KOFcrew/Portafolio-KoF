---
import Boton from "./Boton.astro";
---

<section
  id="inicio"
  class="relative min-h-screen flex items-center justify-center px-4"
  style="background: radial-gradient(circle farthest-corner at 50% 100%, #264653ff 10%, #092327ff 80%, #1B263Bff 100%);"
>
  <div
    class="relative w-full h-[85%] mx-10 rounded-[30px] bg-[url(/Baner.avif)] bg-cover bg-center max-w-[1600px] md:max-w-[1800px] lg:max-w-[2000px] p-10 md:p-16"
  >
    <!-- Capa oscura -->
    <div class="absolute inset-0 bg-black/65 rounded-[30px]"></div>

    <!-- Contenido -->
    <div class="relative flex flex-col items-center text-center text-white">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-extrabold mb-5">
        Transformamos ideas en realidades digitales
      </h1>
      <p class="mt-4 text-lg md:text-2xl lg:text-3xl font-normal mb-20">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Lorem ipsum
        dolor sit amet consectetur adipisicing elit. Lorem ipsum dolor sit amet
        consectetur adipisicing elit.
      </p>
      <div class="flex flex-col md:flex-row gap-4 mt-6">
        <Boton href="#Proyectos">Proyectos</Boton>
        <Boton href="#Precios">Elige un plan</Boton>
      </div>
    </div>
  </div>
</section>

<style>
  h1 {
    font-family: "Space Grotesk Variable";
  }
  p {
    font-family: "Josefin Sans Variable";
  }
</style>

