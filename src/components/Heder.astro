---
import Boton from "./Boton.astro";
---

<section class="bg-gray-900 min-h-screen flex items-center justify-center px-4">
  <div class="relative w-full h-[85vh] mx-10 rounded-[30px] max-w-[2000px] p-10 md:p-16 overflow-hidden">
    <!-- Imagen optimizada -->
    <img 
  src="/bannerH.webp"
  srcset="/bannerH-480.avif 480w, /bannerH-768.avif 768w, /bannerH-1600.avif 1600w, /bannerH-2000.avif 2000w"
  sizes="(max-width: 600px) 480px, (max-width: 1024px) 768px, (max-width: 1600px) 1600px, 2000px"
  alt="Banner principal"
  class="absolute inset-0 w-full h-full object-cover rounded-[30px]"
  loading="eager"
  fetchpriority="high"
/>

    <!-- Capa oscura -->
    <div class="absolute inset-0 bg-black/50 rounded-[30px]"></div>

    <!-- Contenido -->
    <div class="relative flex flex-col items-center text-center text-white">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-extrabold mb-5">
        Transformamos ideas en realidades digitales
      </h1>
      <p class="mt-4 text-lg md:text-2xl lg:text-3xl font-semibold mb-20">
        Lorem ipsum dolor sit amet consectetur adipisicing elit.
      </p>
      <div class="flex flex-col md:flex-row gap-4 mt-6">
        <Boton href="#Proyectos">Proyectos</Boton>
        <Boton href="#Precios">Elige un plan</Boton>
      </div>
    </div>
  </div>
</section>

